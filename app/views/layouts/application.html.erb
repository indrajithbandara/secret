<!DOCTYPE html>
<html>
  <head>
    <title>Secret</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<%= render 'includes/navigation' %>
  	<div class="container">
  		<div class="row">
  			<div class="col-md-12">
          <% if current_page?(root_path) %>
             <div class="messages">
              <%= render 'includes/messages' %>
             </div>            
          <% end %>
  				<%= yield %>
  			</div>
  		</div>
  	</div>
  </body>
</html>
