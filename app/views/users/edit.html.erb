<div class="card card-login col-md-6 offset-md-3" >
      <div class="card-header">Edit profile</div>
      <div class="card-body">
        <%= form_tag edit_profile_path do  %>
         <div class="form-group">
            <label for="username">Username</label>
           <%= text_field_tag(:username, nil, value: @user.username, class: "form-control") %>
          </div>
          <div class="form-group">
            <label for="email">Email address</label>
            <%= text_field_tag(:email, nil, value: @user.email, class: "form-control") %>
          </div>
          <%= submit_tag 'Edit profile', class: 'btn btn-primary btn-block' %>      
        <% end %>
      </div>
    </div>
