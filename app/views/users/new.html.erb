 <div class="card card-login col-md-6 offset-md-3" >
      <div class="card-header">Register</div>
      <div class="card-body">
        <%= render 'includes/messages' %>
        <%= form_tag '/register' do  %>
         <div class="form-group">
            <label for="username">Username</label>
            <%= text_field_tag :username, nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="email">Email address</label>
            <%= text_field_tag :email, nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <%= password_field_tag :password, nil, class: 'form-control' %>
          </div>
          <%= submit_tag 'Register', class: 'btn btn-primary btn-block' %>
        
        <% end %>
        <div class="text-center">
          <%= link_to "Login", login_path,
           class: "d-block small mt-3" %>   
        </div>
      </div>
    </div>
